{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "outDir": "build",
      "strict": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.ts",
      "src/**/__tests__/*.ts"
    ]
}